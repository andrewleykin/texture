.projects__list
  display flex
  justify-content space-between
  flex-wrap wrap

.projects__item
  width 100%
  color #fff
  position relative
  max-width 25%
  overflow hidden
  &:before
    content ''
    display block
    width 100%
    height 100%
    position absolute
    left 0
    right 0
    bottom 0
    top 0
    background-color rgba(#493a3a, 0.75)
    opacity 0
    @extend .trs
  &:hover
    &:before
      opacity 1
    .projects__content
      opacity 1
      transform translateY(0)
  @media (max-width: screen-md)
    max-width 50%
    max-height: 288px
    img
      width 100%
  @media (max-width: screen-sm)
    max-width 75%
    margin 0 auto 20px
    &:hover
      &:before
        opacity 0


.projects__content
  text-align center
  display flex
  flex-direction column
  justify-content center
  align-items center
  position absolute
  top 0
  left 0
  right 0
  bottom 0
  opacity 0
  transform translateY(10px);
  transition-delay .1s;
  @extend .trs
  @media (max-width: screen-sm)
    opacity 1
    transform translateY(0)
    justify-content flex-start
    padding-top 20px

.projects__meter
  font-size 14px
  font-weight 300
  line-height 20px
  letter-spacing 0.35px
  display block
  padding 8px 10px
  background-color rgba(#ededed, 0.2)
  margin-bottom 26px
  @media (max-width: screen-md)
    margin-bottom 15px
  @media (max-width: screen-sm)
    display none

.projects__name
  font-size 16px
  font-weight 700
  line-height 20px
  letter-spacing 0.4px
  max-width 182px
  margin-bottom 35px
  @media (max-width: screen-md)
    margin-bottom 20px
    background-color rgba(#493a3a, 0.75)
    padding 5px 10px
    max-width 100%
    margin-bottom 0

.projects__tag
  font-size 16px
  font-weight 300
  line-height 20px
  letter-spacing 0.4px
  display flex
  align-items center
  &:before,&:after
    content ''
    display block
    width 10px
    height 1px
    background-color #ffffff
  &:before
    margin-right 10px
  &:after
    margin-left 10px
  @media (max-width: screen-sm)
    display none