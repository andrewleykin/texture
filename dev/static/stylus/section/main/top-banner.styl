.top-banner
  padding-top 190px
  position relative
  margin-bottom 150px

.top-banner__social
  position absolute
  left 60px
  top 50%
  transform translateY(-50%)

.top-banner__link
  display block
  &+&
    margin-top 17px
  .icon
    size(29px, 28px)
    fill #cccccc
    @extend .trs
    &:hover
      fill #675656

.top-banner__wrap
  position relative
  &:before
    content ''
    position absolute
    width 548px
    height 255px
    left 0
    top 85px
    z-index -1
    box-shadow 0px -2px 52px -21px rgba(0,0,0,0.3)

.top-banner__texts
  position absolute
  z-index: 2
  left 0
  top 85px

.top-banner__text
  &:nth-child(1)
    padding 30px 70px 25px 49px
  &:nth-child(2)
    padding 10px 50px 30px 49px
  &:nth-child(3)
    padding 0px 67px 40px 49px

.top-banner__slider
  position relative
  max-width 903px
  margin-left auto

.top-banner__item
  position relative
  padding-right 43px
  padding-bottom 42px

.top-banner__img
  overflow hidden
  &:hover
    img
      transform scale(1.1)
  img
    @extend .trs

.top-banner__controls
  position absolute
  z-index 2
  bottom 152px
  left -74px

.top-banner__info
  position absolute
  bottom 0
  right 0

.top-banner__info
  padding-top 40px
  padding-left 47px
  padding-right 15px
  width 392px
  height 133px

.top-banner__brand
  display block
  margin-bottom 19px
  color #fffefe
  font-size 22px
  line-height 24px
  text-transform uppercase
  letter-spacing 0.55px

.top-banner__name
  color #c8bbbb
  font-size 17px
  font-weight 300
  font-style italic
  position relative
  &:after
    content ''
    display block
    size(26px, 1px)
    background-color #9d8282
    position absolute
    right -60px
    top 50%
    transform translateX(-50%)
