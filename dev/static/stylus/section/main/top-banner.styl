.top-banner
  padding-top 190px
  position relative
  margin-bottom 150px

.top-banner__social
  position absolute
  left 60px
  top 50%
  transform translateY(-50%)

.top-banner__link
  display block
  &+&
    margin-top 17px
  .icon
    size(29px, 28px)
    fill #cccccc
    @extend .trs
    &:hover
      fill #675656

.top-banner__wrap
  position relative

.top-banner__texts
  position absolute
  z-index: 2
  left 0
  top 85px
  display flex
  flex-direction column
  align-items: flex-start

.top-banner__text
  color dark-color
  font-size 40px
  font-weight 900
  background rgba(#fff, 0.9)
  box-shadow: 1px 11px 44px -3px rgba(0,0,0,0.3)
  &:nth-child(1)
    padding 30px 70px 25px 49px
    // box-shadow: 0 -1px 15px rgba(0, 0, 0, 0.3);
  &:nth-child(2)
    padding 10px 50px 30px 49px
    // box-shadow: 0 -1px 15px rgba(0, 0, 0, 0.3);
  &:nth-child(3)
    padding 0px 67px 40px 49px
    // box-shadow: 0 -1px 15px rgba(0, 0, 0, 0.3);

.top-banner__slider
  position relative
  max-width 903px
  margin-left auto

.top-banner__item
  position relative
  padding-right 43px
  padding-bottom 42px

.top-banner__controls
  display flex
  position absolute
  z-index 2
  bottom 152px
  left -74px

.top-banner__control
  position relative
  cursor pointer
  size(74px, 76px)
  background-color #e9e9e9
  @extend .trs
  .icon
    size(10px, 16px)
    absolute-center()
    fill #a38383
    @extend .trs
  &:hover
    background rgba(#fff, 0.9)
    .icon
      fill text-color
  &--prev
    transform rotate(180deg)


.top-banner__info
  position absolute
  bottom 0
  right 0

.top-banner__info
  padding-top 40px
  padding-left 47px
  padding-right 15px
  width 392px
  height 133px

.top-banner__brand
  display block
  margin-bottom 19px
  color #fffefe
  font-size 22px
  line-height 24px
  text-transform uppercase
  letter-spacing 0.55px

.top-banner__name
  color #c8bbbb
  font-size 17px
  font-weight 300
  font-style italic
  position relative
  &:after
    content ''
    display block
    size(26px, 1px)
    background-color #9d8282
    position absolute
    right -60px
    top 50%
    transform translateX(-50%)
