.information
  margin-bottom 165px
  overflow hidden
  @media (max-width: screen-xl)
    margin-bottom 115px
  @media (max-width: screen-lg)
    margin-bottom 50px

.information__wrap
  @media (max-width: screen-lg)
    display flex
    flex-direction column-reverse
    padding-top 550px
  @media (max-width: screen-sm)
    overflow hidden

.information__team
  box-shadow 4px 19px 76px rgba(103, 79, 46, 0.04)
  background-color #f1f1f1
  width 100%
  max-width 598px
  margin-left auto
  padding-top 70px
  padding-left 172px
  padding-bottom 99px
  @media (max-width: screen-xl)
    max-width 485px
    padding-left 125px
  @media (max-width: screen-lg)
    max-width 100%
    padding-left 100px
    padding-top 30px
    padding-bottom 50px
  @media (max-width: screen-md)
    text-align center
    padding 30px 15px 50px

.information__title
  font-size 24px
  font-weight 700
  letter-spacing 0.12px
  &--light
    color #f1f1f1
    position relative
    align-self: flex-start
    &:after
      content ''
      display block
      width 87px
      height 1px
      background-color accent-color
      position absolute
      right -125px
      top 50%
      transform translateY(-50%)
  @media (max-width: screen-md)
    &--light
      &:after
        display none

.information__text
  margin-top 38px
  margin-bottom 120px
  max-width 327px
  font-weight 300
  line-height 23px
  letter-spacing 0.08px
  @media (max-width: screen-lg)
    margin-top 20px
    margin-bottom 60px
  @media (max-width: screen-md)
    max-width 100%
    margin-bottom 20px

.information__more
  display flex
  align-items center
  max-width 200px
  padding-right 12px
  .icon
    display block
    margin-left 22px
    size(12px, 20px)
    fill #a38383
    @extend .trs
  &:hover
    .icon
      margin-left 30px
  @media (max-width: screen-md)
    margin 0 auto

.information__project
  z-index 2
  position relative
  display flex
  justify-content space-between
  width 100%
  max-width 670px
  &:after
    content ''
    display block
    position absolute
    bottom 0
    right 0
    width 983px
    height 487px
    z-index -1
    background url(../img/content/main/information/bg.jpg) center no-repeat
  @media (max-width: screen-xl)
    max-width 667px
  @media (max-width: screen-lg)
    max-width 100%
    margin-bottom 30px
    padding-left 15px
    &:after
      width 100%
      background-size cover

.information__controls
  display flex

.information__control
  position relative
  cursor pointer
  size(99px, 90px)
  background-color #3c2f2f
  @extend .trs
  &:before
    background #cfc1c1
    left 48px
  .icon
    size(9px, 15px)
    absolute-center()
    left 48px
    fill #6e5a5a
    @extend .trs
  &:hover
    background-color text-color
    .icon
      fill #cfc1c1
  @media (max-width: screen-sm)
    size(78px, 70px)
    &:before
      left 30px


.information__list
  width 983px
  position absolute
  right 147px
  bottom calc(100% + 73px)
  @media (max-width: screen-xxl)
    right 30px
  @media (max-width: screen-lg)
    right 20px
  @media (max-width: screen-sm)
    right 0px

.information__item
  margin 0 22px 0 23px
  max-width 300px
  @media (max-width: screen-sm)
    margin 0 5px

.information__img
  display block
  position relative
  margin-bottom 29px
  @media (max-width: screen-sm)
    max-width 300px

.information__search
  position absolute
  bottom 0
  right 0

.information__name
  margin-bottom 14px
  display block
  color #f8f8f8
  font-size 19px
  font-weight 700
  letter-spacing 0.47px

.information__author
  color #b3b3b3
  font-size 14px
  font-style italic
  letter-spacing 0.35px