.brands-preview
  margin-bottom 167px
  @media (max-width: screen-xl)
    margin-bottom 117px
  @media (max-width: screen-md)
    margin-bottom 30px

.brands-preview__row
  display flex
  justify-content space-between
  &:nth-child(2)
    margin-top -98px
    align-items: center
    @media (max-width: screen-lg)
      margin-top 35px
  @media (max-width: screen-md)
    display block
    text-align center
    &:nth-child(2)
      display flex
      flex-direction column-reverse

.brands-preview__info
  padding-left 45px
  max-width 561px
  width 100%
  padding-top 52px
  position relative
  &:before
    content ''
    position absolute
    top 49px
    left 0
    width 3px
    height 188px
    background text-color
  @media (max-width: screen-lg)
    padding-top 30px
    max-width 415px
  @media (max-width: screen-md)
    max-width 100%
    padding-top 0
    padding-left 0
    margin-bottom 20px
    &:before
      display none

.brands-preview__img
  @media (max-width: screen-xl)
    max-width 425px
  @media (max-width: screen-md)
    max-width 80%
    margin 0 auto

.brands-preview__title
  color text-color
  font-size 35px
  font-weight 900
  line-height 48px
  letter-spacing -0.17px
  margin-bottom 44px
  position relative
  &:before, &:after
    content ''
    display block
    size(105px,80px)
    background url(../img/general/quote.png) center no-repeat
    position absolute
    z-index -1
  &:before
    transform rotate(-180deg)
    left -15px
    top 12px
  &:after
    bottom -16px
    right -32px
  @media (max-width: screen-lg)
    font-size 24px
    margin-bottom 20px
    &:before
      top -15px
    &:after
      display none

.brands-preview__name
  color gray-color
  font-size 19px
  font-weight 400
  letter-spacing -0.1px

.brands-preview__name--ru
  display block
  margin-bottom 5px

.brands-preview__name--eng
  display block
  color gray-light-color
  font-size 16px
  font-weight 300
  font-style italic
  letter-spacing -0.08px

.brands-preview__photo
  position relative
  box-shadow 11px -11px 87px rgba(117, 117, 117, 0.06)
  @media (max-width: screen-lg)
    max-width 480px

.brands-preview__more
  position absolute
  top 0
  right 0
  color white
  font-size 16px
  text-transform uppercase
  letter-spacing 1.16px
  display flex
  align-items: center
  padding-left 49px
  @media (max-width: screen-lg)
    &.more
      width 320px
      height 60px
      &:before,&:after
        width 45px

.brands-preview__text
  margin-right 30px
  max-width 309px
  font-weight 300
  line-height 27px
  letter-spacing 0.16px
  position relative
  &:before
    content ''
    display block
    z-index -1
    position absolute
    right -24px
    bottom -74px
    width 748px
    height 170px
    background-color #fafafa
  
  @media (max-width: screen-xl)
    padding-left 15px
  @media (max-width: screen-md)
    padding-left 0
    max-width 480px
    margin 0 auto 20px
    &:before
      display none