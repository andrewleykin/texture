.header
  padding 35px 0 20px 
  background white
  position fixed
  width 100%
  top 0
  @extend .trs
  z-index 10
  &--fixed
    padding 10px 0 30px
    box-shadow 0 -1px 15px rgba(0, 0, 0, 0.3)
    .header__logo
      transform scale(0.7) translateY(15px)
    .header__menu
      align-self flex-start

.header__wrap
  display flex
  align-items: center

.header__logo
  margin-right 70px
  width 200px
  @extend .trs
  transform-origin top left
  img
    width 100%

.header__menu
  margin-right auto
  @extend .trs