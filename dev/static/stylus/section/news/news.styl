.news
  background-color #f9f8f8
  padding-top 275px
  padding-bottom 120px
  @media (max-width: screen-xl)
    padding-top 225px
    padding-bottom 100px
  @media (max-width: screen-md)
    padding-top 150px
    padding-bottom 50px

.news__title
  margin-bottom 100px
  @media (max-width: screen-xl)
    margin-bottom 80px
  @media (max-width: screen-md)
    margin-bottom 40px

.news__block
  display flex
  justify-content space-between
  margin-bottom 100px
  @media (max-width: screen-xl)
    margin-bottom 80px
  @media (max-width: screen-md)
    margin-bottom 50px
    display block
  @media (max-width: screen-sm)
    margin-bottom 25px

.news__last
  width 100%
  max-width 670px
  margin-top 10px

.news__roll
  max-width 369px
  @media (max-width screen-md)
    margin-top 40px
    max-width 100%
  @media (max-width: screen-sm)
    margin-top 125px

.news__list
  margin-bottom 130px
  display flex
  flex-wrap wrap
  .news-preview__item
    &:nth-child(-n+3)
      margin-bottom 88px
  @media (max-width: screen-xl)
    margin-bottom 80px
    .news-preview__item
      margin 0 auto 50px
      &:nth-child(4)
        .news-preview__descr
          bottom 8px
  @media (max-width: screen-md)
    margin-bottom 25px
    .news-preview__item
      &:nth-child(4)
        .news-preview__descr
          bottom 0px

.news__pagination
  display flex
  justify-content center
  align-items center

.news__icon
  .icon
    @extend .trs
    size(16px, 13px)
    fill rgba(171, 157, 157, 0.99)
  &:hover
    .icon
      fill rgba(100, 80, 80, 0.99)
  &.active
    .icon
      fill rgba(100, 80, 80, 0.99)
  &--prev
    transform rotate(180deg)
    margin-right 15px
  &--next
    align-self: flex-start
    margin-left 15px


.news__pagin
  display block
  color #9e8b8b
  font-size 19px
  font-weight 300
  letter-spacing 0.19px
  @extend .trs
  &+&
    margin-left 15px
  &.active
    color #4f4646
  &:hover
    color #4f4646