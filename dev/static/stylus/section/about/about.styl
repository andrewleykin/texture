.about
  padding 190px 0 160px
  @media (max-width: screen-lg)
    padding 220px 0 100px
  @media (max-width: screen-md)
    padding 120px 0 80px

.about__top
  position relative
  margin-bottom 130px
  &:before
    content ''
    position absolute
    width 533px
    height 242px
    left 0
    top 85px
    z-index -1
    box-shadow 0px -6px 52px -21px rgba(0,0,0,0.3)
  @media (max-width: screen-lg)
    margin-bottom 100px
  @media (max-width: screen-md)
    margin-bottom 70px
    &:before
      width 100%
  @media (max-width: screen-sm)
    margin-bottom 40px
    &:before
      top 0

.about__texts
  position absolute
  top 85px
  z-index 2
  span
    &:nth-child(1)
      padding 30px 32px 12px 44px
    &:nth-child(2)
      padding 14px 32px 32px 44px
      box-shadow -3px 1px 15px -10px rgba(0,0,0,0.3)
    &:nth-child(3)
      padding 7px 24px 27px 44px
  @media (max-width: screen-lg)
    top 0
  @media (max-width: screen-md)
    span
      &:nth-child(1),
      &:nth-child(2),
      &:nth-child(3)
        padding 10px 20px
  @media (max-width: screen-sm)
    position static
    margin-bottom 20px
    span
      &:nth-child(1),
      &:nth-child(2),
      &:nth-child(3)
        padding 8px 4px

.about__slider
  width 100%
  max-width 860px
  margin-left auto
  position relative
  @media (max-width: screen-sm)
    padding-bottom 76px

.about__controls
  position absolute
  z-index 2
  bottom 110px
  left -74px
  @media (max-width: screen-lg)
    bottom 0
    left 0
  @media (max-width: screen-sm)
    left 50%
    transform translateX(-50%)

.about__info
  position relative
  padding-left 40px
  margin-bottom 88px
  &:before
    content ''
    display block
    position absolute
    left 0
    width 3px
    height 407px
    background-color text-color
  &:hover
    &:before
      animation anim 1.4s linear
  @media (max-width: screen-sm)
    margin-bottom 50px

.about__text
  color dark-color
  font-size 19px
  font-weight 300
  line-height 25px
  &:first-child
    font-weight 700
  &+&
    margin-top 26px
  @media (max-width: screen-md)
    font-size 18px
    line-height 22px
    &+&
      margin-top 14px
  @media (max-width: screen-sm)
    font-style 14px
    line-height 18px

.about__mark
  position absolute
  bottom 0
  right 0
  z-index -1
  @media (max-width: screen-md)
    max-width 180px

.about__social
  margin-left 40px