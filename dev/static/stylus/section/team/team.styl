.team__list
  display flex
  flex-wrap wrap

.team__item
  max-width 266px
  padding-left 31px
  margin-right 68px
  margin-bottom 70px
  position relative
  &:before
    content ''
    display block
    width 3px
    height 196px
    background text-color
    position absolute
    top 0
    left 0
    @extend .trs
  &:nth-child(n+4)
    margin-bottom 0
  &:hover
    &:before
      animation anim 1s linear
  @media (max-width: 704px)
    margin 0 auto 50px
    &:nth-child(n+4)
      margin-bottom 50px

.team__img
  margin-bottom 30px

.team__name
  color dark-color
  font-size 19px
  font-weight 700
  margin-bottom 10px

.team__post
  display block
  margin-bottom 30px
  color #9a8d8d
  font-weight 300
  font-style italic

.team__mail
  display inline-block
  margin-bottom 7px
  color #9a8d8d
  font-weight 300
  position relative
  @extend .trs
  &:hover
    darken(#9a8d8d, 20%)
    &:after
      width 100%
  &:after
    content ''
    display block
    width 0
    height 1px
    background #9a8d8d
    position absolute
    bottom 0
    left 0
    @extend .trs

.team__fb
  display inline-block
  color #4b3737
  font-weight 300
  position relative
  @extend .trs
  &:hover
    color darken(#4b3737, 20%)
    &:after
      width 0
  &:after
    content ''
    display block
    width 100%
    height 1px
    background #4b3737
    position absolute
    bottom 0
    left 0
    @extend .trs
