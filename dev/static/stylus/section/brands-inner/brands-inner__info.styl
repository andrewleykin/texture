.bii
  margin-bottom 102px
  @media (max-width: screen-md)
    margin-bottom 50px

.bii__header
  display flex
  align-items center
  margin-bottom 79px
  position relative
  @media (max-width: screen-md)
    display block

.bii__logo
  flex none
  margin-right 119px
  @media (max-width: screen-md)
    margin 0 auto 30px
    display flex
    justify-content center

.bii__feature
  &:before
    content ''
    display block
    width 961px
    height 118px
    background-color #f7f7f7
    position absolute
    top 50%
    right 0
    transform translateY(-50%)
    z-index -1
  @media (max-width: screen-md)
    text-align center
    &:before
      display none

.bii__title
  margin-bottom 52px

.bii__info
  display flex
  flex-wrap wrap
  p
    width 100%
    max-width 490px
    color accent-color
    font-weight 300
    line-height 27px
    margin-bottom 55px
    &:nth-child(odd)
      margin-right 90px
    @media (max-width: screen-lg)
      max-width 100%
      margin-bottom 30px
      &:nth-child(odd)
        margin-right 0

.bii__link
  color accent-color
  font-size 25px
  font-weight 300
  line-height 27px
  letter-spacing 0.25px
  display inline-block
  padding 12px 46px 16px 49px
  background url('../img/content/brands-inner/info/bg__link.png') center no-repeat
  background-size cover
  @extend .trs
  position relative
  &:after
    content ''
    display block
    width 100%
    height 2px
    background accent-color
    @extend .trs
  &:hover
    background-position left
    &:after
      width 0
  