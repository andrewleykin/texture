.bic
  padding 89px 0 128px
  background #f7f7f7
  @media (max-width: screen-md)
    padding 70px 0 110px
  @media (max-width: screen-sm)
    padding 50px 0 70px

.bic__title
  margin-bottom 95px
  @media (max-width: screen-md)
    margin-bottom 75px
  @media (max-width: screen-sm)
    margin-bottom 35px

.bic__wrap
  display flex
  justify-content space-between
  margin-bottom 80px
  @media (max-width: screen-sm)
    margin-bottom 40px

.bic__wrap--hidden
  display none

.bic__list
  width 100%
  max-width 751px
  display flex
  justify-content space-between
  flex-wrap wrap
  @media (max-width: screen-lg)
    max-width 100%

.bic__item
  &:nth-child(1),
  &:nth-child(2)
    margin-bottom 57px
  @media (max-width: screen-xl)
    max-width 49%
    margin 0 10px
  @media (max-width: screen-lg)
    max-width 50%
    margin 0 15px
  @media (max-width: screen-md)
    width 49%
    margin 0
    img 
      width 100%
  @media (max-width: screen-sm)
    width 100%
    max-width 100%
    margin-bottom 40px
    &:nth-child(1),
    &:nth-child(2)
      margin-bottom 40px
    &:last-child
      margin-bottom 0


.bic__item--big
  flex none
  &:nth-child(1)
    margin 0
  @media (max-width: screen-lg)
    display none

.bic__img
  margin-bottom 29px
  @media (max-width: screen-sm)
    margin-bottom 15px

.bic__search
  position absolute
  bottom 0
  right 0

.bic__subtitle
  font-size 19px
  font-weight 700
  letter-spacing 0.47px

.bic__more
  color #ae9393
  font-size 16px
  text-transform uppercase
  letter-spacing 1.2px
  display inline-flex
  padding-right 2px
  @extend .trs
  &:after
    content ''
    display block
    width 9px
    height 9px
    border-radius 1px
    border 1px solid transparent
    border-right-color #725c5c
    border-bottom-color #725c5c
    transform rotate(45deg)
    margin-left 14px
    @extend .trs
  &:hover
    color darken(#ae9393, 20%)
    &:after
      border-right-color darken(#725c5c, 20%)
      border-bottom-color darken(#725c5c, 20%)



.bic-modal {
  max-width 900px
  padding 25px
}

.bic-modal__title {
  font-size 19px
  font-weight 700
  letter-spacing 0.47px
  margin-bottom 15px
}

.bic-modal__img {
  img {
    width 100%
    max-width 768px
  }
}