.bit
  background #f7f7f7
  margin-top 188px
  margin-bottom 69px

.bit__wrap
  display flex
  @media (max-width: screen-md)
    flex-direction column-reverse

.bit__img
  width 100%
  max-width 569px
  margin-right 50px
  flex none
  @media (max-width: screen-lg)
    max-width 400px
    margin-right 30px
  @media (max-width: screen-md)
    margin 20px auto 0

.bit__title
  margin-top 64px
  margin-bottom 45px
  display flex
  align-items center
  &:after
    content ''
    display block
    width 80px
    height 2px
    background accent-color
    margin-left 30px
  @media (max-width: screen-md)
    text-align center
    margin-top 30px
    margin-bottom 25px
    flex-direction column
    &:after
      margin-left 0
      margin-top 10px

.bit__text
  color accent-color
  font-weight 300
  line-height 27px
  &+&
    margin-top 35px
  @media (max-width: screen-md)
    text-align center
    &+&
      margin-top 20px