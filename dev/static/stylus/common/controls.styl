.controls
  display flex
  &.prev
    .control
      &--prev
        transform scale(1.5, 1)
        &:before
          left 19px
          width 55%
          transform translate(0%, -50%) scaleX(1)
        .icon
          left 20px
          width 10px
          height 20px
      &--next
        transform scale(0.5, 1)
        
  &.next
    .control
      &--next
        transform scale(1.5, 1)
        &:before
          left 21%
          right 19px
          width 55%
          transform translate(0%, -50%) scaleX(1)
        .icon
          left 74%
          width 10px
          height 20px
      &--prev
        transform scale(0.5, 1)

.control
  position relative
  cursor pointer
  size(74px, 76px)
  background-color #e9e9e9
  @extend .trs
  &:before
    content ''
    display block
    width 0
    height 2px
    background text-color
    position absolute
    absolute-center()
    transform translate(-50%, -50%) scaleX(0)
    transform-origin left top
    left 36px
    @extend .trs
  .icon
    size(16px, 16px)
    absolute-center()
    left 36px
    fill #a38383
    @extend .trs
  &:hover
    background rgba(#fff, 0.9)
    .icon
      fill text-color
  &--next
    transform-origin 100% 50%
    &:before
      transform-origin right top
  &--prev
    transform-origin 0 50%