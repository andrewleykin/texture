.controls
  display flex

.control
  position relative
  cursor pointer
  size(74px, 76px)
  background-color #e9e9e9
  @extend .trs
  .icon
    size(10px, 16px)
    absolute-center()
    fill #a38383
    @extend .trs
  &:hover
    background rgba(#fff, 0.9)
    .icon
      fill text-color
  &--prev
    transform rotate(180deg)