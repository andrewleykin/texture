.btn
  display block
  padding 22px 38px
  color accent-color
  font-size 14px
  font-weight 700
  text-transform uppercase
  letter-spacing 1.4px
  cursor pointer
  position relative
  @extend .trs

  &--dark
    color #dedede
    box-shadow 0 0 39px 4px rgba(217, 217, 217, 0.18)
    border-radius 2px
    background rgba(67, 50, 50, 0.99)
    &:hover
      background lighten(rgba(67, 50, 50, 0.99), 20%)

  &--border
    border-hover = 1px solid #bfb7b7
    
    border 1px solid rgba(207, 207, 207, 0.41)
    &:hover
      &:before,&:after
        transform scale(1)  
    &:before,&:after
      content ''
      display block
      size(100%, 100%)
      position absolute
      transform scale(0)
      @extend .trs
    &:before
      top 0
      left 0
      border-top border-hover
      border-left border-hover
      transform-origin top left
    &:after
      bottom 0
      right 0
      border-bottom border-hover
      border-right border-hover
      transform-origin bottom right
    
    .header--fixed &
      padding 15px 25px
      font-size 12px